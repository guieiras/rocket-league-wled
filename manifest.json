{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Rocket League WLED integration",
    "version": "1.0.0.0",
    "minimum-overwolf-version": "0.97.208.0",
    "author": "Guilherme Eiras",
    "description": "Apply effects on a LED strip using WLED based on Rocket League info and events",
    "dock_button_title": "Rocket League WLED",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "launcher_icon": "icons/TaskbarIcon.png",
    "window_icon": "icons/TaskbarIcon.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo"
  ],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "dist/background/background.html",
        "is_background_page": true
      },
      "in_game": {
        "file": "dist/in_game/in_game.html",
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "showhide",
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 720,
          "height": 600
        },
        "min_size": {
          "width": 720,
          "height": 600
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        10798
      ]
    },
    "game_events": [
      10798
    ],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            10798
          ]
        },
        "start_minimized": true
      }
    ],
    "hotkeys": {
      "showhide": {
        "title": "Show/Hide In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+L"
      }
    }
  }
}
